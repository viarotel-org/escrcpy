{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "release-type": "node",
      "package-name": "@escrcpy/workspace",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "changelog-sections": [
        { "type": "feat", "section": "Features", "hidden": false },
        { "type": "fix", "section": "Bug Fixes", "hidden": false },
        { "type": "perf", "section": "Performance Improvements", "hidden": false },
        { "type": "revert", "section": "Reverts", "hidden": false },
        { "type": "docs", "section": "Documentation", "hidden": true },
        { "type": "style", "section": "Styles", "hidden": true },
        { "type": "chore", "section": "Miscellaneous Chores", "hidden": false },
        { "type": "refactor", "section": "Code Refactoring", "hidden": false },
        { "type": "test", "section": "Tests", "hidden": true },
        { "type": "build", "section": "Build System", "hidden": true },
        { "type": "ci", "section": "Continuous Integration", "hidden": true }
      ],
      "extra-files": [
        "desktop/package.json",
        "packages/electron-ipcx/package.json"
      ]
    },
    "desktop": {
      "release-type": "node",
      "package-name": "escrcpy",
      "component": "desktop",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "skip-github-release": true
    },
    "packages/electron-ipcx": {
      "release-type": "node",
      "package-name": "@escrcpy/electron-ipcx",
      "component": "electron-ipcx",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "skip-github-release": true
    }
  },
  "group-pull-request-title-pattern": "chore: release${component} ${version}",
  "release-search-depth": 10,
  "changelog-host": "https://github.com",
  "changelog-path": "CHANGELOG.md",
  "pull-request-title-pattern": "chore${scope}: release${component} ${version}",
  "pull-request-header": "ðŸš€ Release Please",
  "separate-pull-requests": false,
  "plugins": [
    {
      "type": "node-workspace",
      "merge": true,
      "updatePeerDependencies": true
    }
  ]
}
